<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/selected.css">
</head>

<body>


    <h1>
        <%= title %> Movies Must watch
    </h1>

    <div class="main-list">
        <div class="movielist">


            <% movie.forEach(function(movie) { %>

                <div class="movie-box">
                    <div class="img">
                        <img src="<%= movie.img %>" alt="<%= movie.name %>">
                    </div>
                    <h2 class="mname">
                        <a href="/info/<%= movie.id %>">
                            <%= movie.name %>
                        </a>
                        <%= movie.id %>
                    </h2>
                    <h3>
                        <%= movie.year %>
                    </h3>



                </div>

                <% }) %>
        </div>
    </div>

</body>

</html>